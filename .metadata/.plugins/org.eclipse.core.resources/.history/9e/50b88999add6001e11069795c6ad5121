package part2.ex3.데이터구조화;

public class Program {

	public static void main(String[] args) {
		Exam[] exams = new Exam[3];
		
		int menu;
		boolean keepLoop = true;
		
		while(keepLoop)
		{
			menu = inputMenu();
			
			switch(menu)
			{
			case 1:
				inputScore(scores);
				break;
			case 2:
				outputScore(scores);
				
				break;
			case 3:
				System.out.println("Bye~~");
				
				keepLoop = false;
				break;
				
			default:
				System.out.println("잘못된 값을 입력하셨습니다. 메뉴는 1~3까지입니다.");
			}
		}

	}

}
